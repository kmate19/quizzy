{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true,
        "outDir": "dist",
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "NodeNext",
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022"
    }
}
