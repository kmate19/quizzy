{
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "incremental": false,
        "isolatedModules": true,
        //"outDir": "dist", // TODO: this should be in the dist folder but other modules resolve imports from the root, need to fix
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "NodeNext",
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2022"
    }
}
