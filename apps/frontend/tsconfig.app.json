{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "tests/**/*.test.ts"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*",
                "./node_modules/@repo/api/src/*"
            ]
        },
        "types": [
            "bun"
        ]
    },
    "references": [
        {
            "path": "./node_modules/@repo/types"
        }
    ]
}
