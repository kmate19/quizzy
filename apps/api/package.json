{
    "name": "@repo/api",
    "private": true,
    "type": "module",
    "exports": {
        "./hc": {
            "import": {
                "default": "./dist/hc.js",
                "types": "./dist/hc.d.ts"
            }
        }
    },
    "scripts": {
        "build": "pnpm drizzle:generate && pnpm build:bun",
        "build:bun": "bun build --sourcemap --minify --compile --outfile ./dist/api --target bun ./src/index.ts ./src/workers/email-worker.ts",
        "tsc:hc": "tsc -p tsconfig.build.json",
        "start": "./dist/api",
        "dev": "bun run --hot ./src/index.ts",
        "prepare": "pnpm tsc:hc",
        "test": "bun test",
        "drizzle:push": "drizzle-kit push",
        "drizzle:generate": "drizzle-kit generate",
        "drizzle:migrate": "drizzle-kit migrate",
        "drizzle:studio": "drizzle-kit studio"
    },
    "dependencies": {
        "@hono/zod-validator": "^0.4.2",
        "drizzle-orm": "^0.38.4",
        "drizzle-seed": "^0.3.0",
        "drizzle-zod": "^0.6.1",
        "file-type": "^20.0.1",
        "hono": "^4.6.18",
        "nodemailer": "^6.10.0",
        "pg": "^8.13.1",
        "sharp": "^0.33.5",
        "zod": "^3.24.1"
    },
    "devDependencies": {
        "@types/bun": "^1.2.0",
        "@types/nodemailer": "^6.4.17",
        "@types/pg": "^8.11.11",
        "@types/repo": "workspace:*",
        "drizzle-kit": "^0.30.2"
    },
    "packageManager": "pnpm@9.13.2"
}
