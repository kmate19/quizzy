{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ]
        },
        "start": {
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "test": {
            "dependsOn": [
                "^test"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "env": [
                "NODE_ENV",
                "EMAIL_USER",
                "EMAIL_PASS"
            ],
            "dependsOn": [
                "drizzle:push"
            ]
        },
        "drizzle:push": {
            "cache": false,
            "interactive": true
        },
        "drizzle:studio": {
            "cache": false,
            "persistent": true
        }
    }
}
